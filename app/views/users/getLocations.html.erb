<h3>
  All <%= @genre.capitalize! %> places around you
</h3>
<div class="row-fluid">
  <% count = 0 %>
  <% @restarauntsData.each do |restaraunt| %>
    <% if count % 3 == 0 && count > 0 %>
  </div>
<div class = "row-fluid">
<% end %>  
  <div class="span4">
    <div class="place" data-fbid="<%= restaraunt["id"] %>" data-lat"<%= restaraunt["location"]["latitude"] %>" 
      data-long="<%= restaraunt["location"]["longitude"] %>"   data-fb-pic="<%= restaraunt["fb_pic"] %>" style="padding:5px;" >
      <a class="restaraunt" href="events/new?fbid=<%= restaraunt["id"] %>"><img src ="<%= restaraunt["fb_pic_logo"]%>" class="place-logo"/><%=restaraunt["name"]  %></a>
      <a class="restaraunt" href="/show_restaraunt?fbid=<%= restaraunt["id"] %>"  target="_blank" >
        <abbr title="Go to <%= restaraunt["name"] %>'s website"><i class="icon-share"></i></a>
      </a>
    </div>
  </div>
  <% count += 1 %>
<% end %>
</div>
