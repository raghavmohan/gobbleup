<%= simple_form_for @user do |f| %>
<%= f.input :name, label:'<img src="https://graph.facebook.com/'+@user.uid+'/picture">', placeholder: 'Your name' %>
<%= f.input :email, label: '<i class="icon-envelope icon-large"></i>', placeholder: 'user@domain.com' %>
<%= f.input :phone_number, label: '<i class="icon-phone icon-large"></i>', placeholder: '(XXX)-XXX-XXXX' %>
<%= f.button :submit %>
<% end %>
